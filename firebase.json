{
  "hosting": {
    "predeploy": [
      "npm run build:prod",
      "npm run algolia"
    ],
    "public": "dist",
    "headers": [
      {
        "source": "*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store"
          }
        ]
      },
      {
        "source": "*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0"
          }
        ]
      }
    ],
    "i18n": {
      "root": "/localized-files"
    },
    "redirects": []
  },
  "emulators": {
    "hosting": {
      "port": 8080
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
